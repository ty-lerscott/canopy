{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["ESNext.Array", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "jsx": "preserve",
    "incremental": true,
    "target": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["./apps/**/*.ts", "./apps/**/*.mjs"],
  "exclude": [
    "node_modules"
  ]
}
